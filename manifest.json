{
  "manifest_version": 3,
  "name": "Windsurf Prompts",
  "version": "1.0",
  "description": "Easily copy and paste prompts from the Windsurf Prompts Repository",
  "permissions": [
    "activeTab",
    "downloads",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.windsurf.dev/*",
        "http://localhost:3000/*",
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
